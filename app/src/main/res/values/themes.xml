<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ShortNotes" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/main_color</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/main_color</item>
        <item name="colorSecondaryVariant">@color/main_color</item>
        <item name="colorOnSecondary">@color/main_color</item>

        <item name="android:statusBarColor">@color/main_color</item>

        <item name="android:windowBackground">@color/off_white</item>
        
        <item name="android:navigationBarColor">@color/bg</item>

    </style>
    <style name="Theme.ShortNotes" parent="Base.Theme.ShortNotes" />
    <style name="Title">
        <item name="android:fontFamily">cursive</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontStyle" tools:targetApi="o">italic</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>